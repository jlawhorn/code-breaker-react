<section class="new-game-modal">
    <form class="">
        <legend>New Game</legend>
        <fieldset>
            <label>I am a...</label>
            <label for="playerTypePlayer"><span class="sub-label">Player</span> <input type="radio" id="playerTypePlayer" name="playerType" value="player" required="required" /></label>
            <label for="playerTypeMaster"><span class="sub-label">Code Master</span> <input type="radio" id="playerTypeMaster" name="playerType" value="master" required="required" /></label>
        </fieldset>

        <fieldset>
            <label>I am on...</label>
            <label for="playerTeamBlue"><span class="sub-label">Blue Team</span> <input type="radio" id="playerTeamBlue" name="playerTeam" value="blue" required="required" /></label>
            <label for="playerTeamRed"><span class="sub-label">Red Team</span> <input type="radio" id="playerTeamRed" name="playerTeam" value="red" required="required" /></label>
        </fieldset>

        <input type="submit" value="Start" title="Start" class="button button--primary" />
    </form>
</section>